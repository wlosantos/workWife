= render 'shared/navbarPrincipal'

.panelGeral
  .conteudo
    .level
      .level-left
        .titleConteudo
          %h1.title.is-size-3.has-text-grey.mb-5 Associados
      .level-right
        = link_to '+ Novo Associado', new_register_path, class: 'button is-success'

    .contentGeral.mt-0
      .containerBase
        .searchContainer
          = form_with(url: '#', local: true) do |form|
            .field.has-addons
              .control
                =form.text_field :search, class: 'input', placehoder: 'digite um nome'
              .control
                =form.submit 'pesquisar', class: 'button is-info'

        %table.table.is-striped.is-fullwidth
          %thead
            %tr
              %th{width: '5%'} #
              %th{width: '18%'} Nome
              %th{width: '10%'} Dt. Cadastro
              %th{width: '12%'} CPF
              %th{width: '12%'} RG
              %th{width: '12%'} Dt. Nascimento
              %th{width: '12%'} Tipo
              %th{width: '19%'}
        .listTableRegister
          %table.table.is-striped.is-fullwidth
            -# %thead
              %tr
                %th{width: '5%'}
                %th{width: '18%'}
                %th{width: '10%'}
                %th{width: '12%'}
                %th{width: '12%'}
                %th{width: '12%'}
                %th{width: '12%'}
                %th{width: '19%'}
            %tbody
              - @registers.each do |register|
                = render 'table_row', register: register
